<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical|center_horizontal"
    android:layout_centerInParent="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.williammoreira.ubers_ultimo.MainActivity"
    tools:showIn="@layout/app_bar_main"
    tools:layout_editor_absoluteY="1000dp"
    tools:layout_editor_absoluteX="1000dp">

    <Button
        android:id="@+id/button2"
        android:layout_width="170dp"
        android:layout_height="70dp"
        android:onClick="abrirMapa"
        android:text="Abrir Mapa"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="500dp"
        tools:layout_editor_absoluteY="500dp"
        android:layout_marginTop="157dp"
        android:layout_alignTop="@+id/imageView3"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/fundo"
        android:layout_marginBottom="68dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
